.container {
  padding: 40rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.header {
  text-align: center;
  padding: 60rpx 0;
  color: #fff;
}

.title {
  display: block;
  font-size: 56rpx;
  font-weight: bold;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.8;
  margin-top: 10rpx;
}

.quick-actions {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-top: 40rpx;
}

.action-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0,0,0,0.1);
}

.action-icon {
  font-size: 48rpx;
}

.action-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-top: 20rpx;
}

.action-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
}

.loading {
  text-align: center;
  color: #fff;
  padding: 100rpx;
}

