.container{padding:24rpx}
.title{font-size:36rpx;font-weight:600;margin-bottom:16rpx}
.meta{border:1px solid #eee;border-radius:16rpx;padding:16rpx;color:#333;margin-bottom:18rpx}
.section{border:1px solid #f0f0f0;border-radius:16rpx;padding:16rpx;margin-bottom:18rpx}
.section-title{font-weight:600;margin-bottom:12rpx}
.list .item{padding:12rpx 0;border-bottom:1px solid #f6f6f6}
.checkbox-item{display:flex;gap:12rpx;align-items:flex-start}
.bold{font-weight:600}
.sub{color:#999;font-size:24rpx;margin-top:4rpx}
.primary{background:#4A90D9;color:#fff;margin-top:10rpx}
.hint{margin-top:10rpx;color:#666;font-size:24rpx;line-height:1.4}
.row-actions{display:flex;gap:12rpx;margin-top:12rpx}
