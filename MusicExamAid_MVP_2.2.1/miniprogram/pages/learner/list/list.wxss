.container { padding: 20rpx; background: #f5f5f5; min-height: 100vh; }
.header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 20rpx; }
.title { font-size: 36rpx; font-weight: bold; }
.add-btn { background: #4A90D9; color: #fff; font-size: 28rpx; padding: 10rpx 30rpx; border-radius: 30rpx; }
.list { background: #fff; border-radius: 16rpx; }
.item { padding: 30rpx; border-bottom: 1rpx solid #eee; }
.item:last-child { border-bottom: none; }
.name { font-size: 32rpx; font-weight: 500; }
.info { font-size: 26rpx; color: #666; margin-top: 10rpx; }
.empty { padding: 60rpx; text-align: center; color: #999; }
.loading { text-align: center; padding: 60rpx; color: #999; }

