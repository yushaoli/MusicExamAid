<view class="container">
  <view class="header"><text class="title">我的报名</text><button class="add-btn" bindtap="goToCreate">+ 新建</button></view>
  <view class="list" wx:if="{{!loading}}">
    <view class="item" wx:for="{{registrations}}" wx:key="_id" data-id="{{item._id}}" bindtap="goToDetail">
      <view class="top"><text class="subject">{{item.subject_id}}</text><text class="status {{item.workflow_status}}">{{item.workflow_status}}</text></view>
      <view class="info">级别 {{item.level}} · {{item.cycle_id}}</view>
    </view>
    <view class="empty" wx:if="{{registrations.length === 0}}">暂无报名</view>
  </view>
</view>

